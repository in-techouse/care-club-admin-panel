<% extend ('../auth_layout')%>
<!--====== PAGE BANNER PART START ======-->

<section class="page_banner bg_cover" style="background-image: url(/public/helpgrove/assets/images/slider-1.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page_banner_content text-center">
                    <h3 class="page_title">FORGOT PASSWORD</h3>
                    <ul class="breadcrumb justify-content-center">
                        <li><a href="/">Home</a></li>
                        <li><a class="active" href="#">Forgot Password</a></li>
                    </ul>
                </div> <!-- page banner content -->
            </div>
        </div> <!-- row -->
    </div> <!-- container -->
</section>

<!--====== PAGE BANNER PART ENDS ======-->
<div class="row" style="padding-top: 50px;"></div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="jumbotron" style="padding-top: 7px!important; padding-bottom: 7px!important;">
            <div class="row">
                <form id="signInForm" method="POST" action="/forgetPassword" style="width: 100%;">
                    <h1 style="text-align:center; text-transform: uppercase;">Forget Password?</h1>
                    <p class="active">Provide us your email, and get a passowrd reset email.</p>
                    <br />
                    <div class="form-group form-success-gone">

                        <label>Email</label>
                        <input name="userEmail" required type="email" placeholder="Enter your email"
                            class="form-control" />
                    </div>

                    <% if (error != "" ){ %>
                    <div class="form-group form-success-gone">
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    </div>
                    <% } %>
                    <% if (success != "" ){ %>
                    <div class="form-group form-success-gone">
                        <div class="alert alert-success" role="alert">
                            <%= success %>
                        </div>
                    </div>
                    <% } %>

                    <input type="submit" class="btn main-btn btn-block" value="SEND PASSWORD RESET EMAIL"
                        style="text-transform: uppercase;" />
                </form>
            </div>

            <div class="row" style="margin-top: 30px;">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <a class="active" href="/registeration">Don't have an account? <b>Click here to CREATE ONE</b></a>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row" style="margin-top: 30px;">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <a class="active" href="/login">Already have an account? <b>Click here to LOGIN</b></a>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>