<% extend ('../auth_layout')%>
<div class="row" style="padding-top: 50px;"></div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="jumbotron" style="padding-top: 7px!important; padding-bottom: 7px!important;">
            <div class="row">
                <form id="signInForm" method="POST" action="/forgetPassword" style="width: 100%;">
                    <h1 style="text-align:center; text-transform: uppercase;">Forget Password?</h1>
                    <p>Provide us your email, and get a passowrd reset email.</p>
                    <br />
                    <div class="form-group form-success-gone">

                        <label>Email</label>
                        <input name="userEmail" required type="email" placeholder="Enter your email"
                            class="form-control" />
                    </div>

                    <% if (error != "" ){ %>
                    <div class="form-group form-success-gone">
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    </div>
                    <% } %>
                    <% if (success != "" ){ %>
                    <div class="form-group form-success-gone">
                        <div class="alert alert-success" role="alert">
                            <%= success %>
                        </div>
                    </div>
                    <% } %>

                    <input type="submit" class="btn btn-primary btn-block" value="SEND PASSWORD RESET EMAIL"
                        style="text-transform: uppercase;" />
                </form>
            </div>

            <div class="row" style="margin-top: 30px;">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <a href="/registeration">Don't have an account? <b>Click here to CREATE ONE</b></a>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row" style="margin-top: 30px;">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <a href="/login">Already have an account? <b>Click here to LOGIN</b></a>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>