<% extend ('../../layout')%>
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-car icon-gradient bg-mean-fruit">
                </i>
            </div>
            <div>
                NGO All Products
            </div>
        </div>
    </div>
</div>

<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Listing all products</h5>
        <div class="row">
            <% products.forEach(p=>{%>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= p.name %></h5>
                        <img src="<%= p.images[0]%>" class="img-responsive" style="width: 100%; height: 300px;" />
                        <h5 class="card-title" style="margin-top: 5px;"><%= p.category %></h5>
                        <a href="/ngo/productdetail?id=<%= p.id%>" class="btn btn-block btn-outline-success">DETAIL</a>
                    </div>
                </div>
            </div>
            <%});%>
        </div>
    </div>
</div>