<% extend ('../auth_layout')%>
<!--====== PAGE BANNER PART START ======-->

<section class="page_banner bg_cover" style="background-image: url(/public/helpgrove/assets/images/slider-1.jpg)">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page_banner_content text-center">
          <h3 class="page_title">NGO REGISTRATION</h3>
          <ul class="breadcrumb justify-content-center">
            <li><a href="/">Home</a></li>
            <li><a class="active" href="#">Registration</a></li>
          </ul>
        </div> <!-- page banner content -->
      </div>
    </div> <!-- row -->
  </div> <!-- container -->
</section>

<!--====== PAGE BANNER PART ENDS ======-->
<div class="row" style="padding-top: 50px;">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="jumbotron" style="padding-top: 7px!important; padding-bottom: 7px!important;">
      <div class="row">
        <form id="signupform" method="POST" action="/registeration" style="width: 100%;">
          <h1 style="text-align:center; text-transform: uppercase;">NGO REGISTRATION</h1>
          <br />
          <div class="form-group form-success-gone">
            <label>NGO Category</label>
            <select class="form-control" name="ngoCategory" required>
              <option value="Business-Friendly International NGO">Business-Friendly International NGO</option>
              <option value="Operational NGO">Operational NGO</option>
              <option value="Advocacy NGO">Advocacy NGO</option>
              <option value="Environmental NGO">Environmental NGO </option>
              <option value="Animal NGO">Animal NGO</option>
              <option value="WOMEN NGO">WOMEN NGO</option>
              <option value="Health Charities">Health Charities</option>
              <option value="Education Charities">Education Charities</option>
              <option value="Arts & Culture Charties">Arts & Culture Charties</option>
            </select>
          </div>
          <div class="form-group form-success-gone">
            <label>NGO Name</label>
            <input name="ngoName" required type="text" placeholder="Enter NGO's Name " class="form-control"
              minlength="3" />
          </div>

          <div class="form-group form-success-gone">
            <label>Email</label>
            <input name="email" required type="email" placeholder="Enter NGO's Email" class="form-control" />
          </div>
          <div class="form-group form-success-gone">
            <label>Phone number</label>
            <input name="phone" required type="number" placeholder="Enter NGO's Phone Number" class="form-control"
              minlength="11" maxlength="11" />
          </div>

          <div class="form-group form-success-gone">
            <label>NGO Address</label>
            <input name="address" required type="text" placeholder="Enter NGO's Address" class="form-control"
              minlength="11" />
          </div>


          <div class="form-group form-success-gone">
            <label>Password</label>
            <input name="password" required type="password" placeholder="Enter password" class="form-control"
              minlength="6" />
          </div>
          <div class="form-group form-success-gone">
            <label> Confirm Password</label>
            <input name="passwordConfirmation" required type="password" placeholder="Confirm Password"
              class="form-control" minlength="6" />
          </div>

          <% if (error != "" ){ %>
          <div class="form-group form-success-gone">
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          </div>
          <% } %>
          <input type="submit" class="btn main-btn btn-block" value="SignUP" style="text-transform: uppercase;" />
        </form>
      </div>
      <div class="row" style="margin-top: 30px;">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <a href="/login">Already have an account? <b>Click here to LOGIN</b></a>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>